<?xml version="1.0"?>
<launch>

  <arg name="sensor_hostname" default="192.168.131.4" doc="can be the hostname (os-122138000116) or IP of the sensor."/>
  <arg name="udp_dest" default="192.168.131.1" doc="is the hostname or IP to which the sensor should send data."/>
  <arg name="lidar_port" default="46481" doc="port to which the sensor should send lidar data"/>
  <arg name="imu_port" default="45352" doc="port to which the sensor should send imu data"/>
  <arg name="replay" default="false" doc="do not connect to a sensor; expect /ouster_data_handler/{lidar,imu}_raw_packets from replay"/>  
  <arg name="timestamp_mode" default="TIME_FROM_PTP_1588" doc="method used to timestamp measurements: TIME_FROM_INTERNAL_OSC, TIME_FROM_SYNC_PULSE_IN, TIME_FROM_PTP_1588"/>
  <arg name="image" default="false" doc="publish range/intensity/ambient image topic"/>
  <arg name="tf_prefix" default="" doc="namespace for tf transforms"/>
  <arg name="metadata" default="$(find mbs_husky_ouster)/etc/sensor_metadata.json" doc="is the path to the json file to which to save calibration metadata."/>
  <arg name="lidar_mode" default="2048x10" doc=" is one of 512x10, 512x20, 1024x10, 1024x20, or 2048x10."/>
  <arg name="viz" default="false" doc=" is either true or false: if true, a window should open and start displaying data."/>
  
  <!-- <include file="$(find ouster_ros)/launch/ouster.launch" pass_all_args="true"/> -->

  <node pkg="ouster_ros" name="ouster_data_handler" type="os_node" output="screen" required="true">
    <param name="~/lidar_mode" type="string" value="$(arg lidar_mode)"/>
    <param name="~/timestamp_mode" type="string" value="$(arg timestamp_mode)"/>
    <param name="~/replay" value="$(arg replay)"/>
    <param name="~/sensor_hostname" value="$(arg sensor_hostname)"/>
    <param name="~/udp_dest" value="$(arg udp_dest)"/>
    <param name="~/lidar_port" value="$(arg lidar_port)"/>
    <param name="~/imu_port" value="$(arg imu_port)"/>
    <param name="~/metadata" value="$(arg metadata)"/>
    <remap from="~/lidar_packets" to="/ouster_data_handler/lidar_raw_packets"/>
    <remap from="~/imu_packets" to="/ouster_data_handler/imu_raw_packets"/>
  </node>

  <node pkg="ouster_ros" type="os_cloud_node" name="ouster_node" output="screen" required="true">
    <remap from="~/os_config" to="/ouster_data_handler/os_config"/>
    <remap from="~/lidar_packets" to="/ouster_data_handler/lidar_raw_packets"/>
    <remap from="~/imu_packets" to="/ouster_data_handler/imu_raw_packets"/>
    <param name="~/tf_prefix" value="$(arg tf_prefix)"/>
    <remap from="~/points" to="/points"/>
    <remap from="~/imu" to="/ouster/imu"/>
  </node>

  <node if="$(arg viz)" pkg="ouster_ros" name="viz_node" type="viz_node" output="screen" required="true">
    <remap from="~/os_config" to="/ouster_data_handler/os_config"/>
    <remap from="~/lidar_packets" to="/ouster_data_handler/lidar_raw_packets"/>
  </node>

  <node if="$(arg image)" pkg="ouster_ros" name="ouster_img_node" type="img_node" output="screen" required="true">
    <remap from="~/os_config" to="/ouster_data_handler/os_config"/>
    <remap from="~/points" to="/points"/>
    <remap from="~/ambient_image" to="/ouster/ambient_image"/>
    <remap from="~/intensity_image" to="/ouster/intensity_image"/>
    <remap from="~/range_image" to="/ouster/range_image"/>
  </node>

</launch>
