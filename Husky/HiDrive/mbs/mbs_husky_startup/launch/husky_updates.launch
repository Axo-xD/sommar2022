<launch>

<!--
******************************************************************
******************************************************************

                        Husky base driver

******************************************************************
****************************************************************** 
-->

  <include file="$(find husky_base)/launch/base.launch"/>

<!--
******************************************************************
******************************************************************

                      Emlid GPS related Nodes

******************************************************************
****************************************************************** 
-->

  <!-- <group ns="emlid">
    <node pkg="nmea_comms" type="serial_node" name="nmea_serial_node" output="screen">
